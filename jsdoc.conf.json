{
	"tags"      : {
		"allowUnknownTags" : true
	},
	"source"    : {
		"include" : [
			"base/chains.js", "base/index.js",
			"utils/logger.js",
			"strings/format.js",
			"mixins/signalable.js",
			"mixins/bussable.js",
			"documents/probe.js",
			"documents/binder.js",
			"documents/model.js",
			"documents/schema.js"
		]
	},
	"plugins"   : [
		"plugins/markdown"
	],
	"templates" : {
		"cleverLinks"           : true,
		"monospaceLinks"        : false,
		"dateFormat"            : "ddd MMM Do YYYY",
		"outputSourceFiles"     : true,
		"outputSourcePath"      : true,
		"systemName"            : "DocStrap",
		"footer"                : "",
		"copyright"             : "DocStrap Copyright Â© 2012-2013 The contributors to the JSDoc3 and DocStrap projects.",
		"navType"               : "vertical",
		"theme"                 : "cerulean",
		"linenums"              : true,
		"collapseSymbols"       : false,
		"inverseNav"            : true,
		"highlightTutorialCode" : true
	},
	"opts"      : {
		"private"     : true,
		"lenient"     : true,
		"destination" : "dox",
		"template"    : "node_modules/ink-docstrap/template"
	}
}
