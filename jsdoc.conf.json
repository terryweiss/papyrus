{
	"tags"      : {
		"allowUnknownTags" : true
	},
	"source"    : {
		"include" : [
			"src/base/",
			"src/utils/",
			"src/strings/",
			"src/mixins/",
			"src/document/",
			"src/view/",
			"src/application/client.js"
		]
	},
	"plugins"   : [
		"plugins/markdown"
	],
	"templates" : {
		"cleverLinks"           : true,
		"monospaceLinks"        : false,
		"dateFormat"            : "ddd MMM Do YYYY",
		"outputSourceFiles"     : true,
		"outputSourcePath"      : true,
		"systemName"            : "Papyrus",
		"footer"                : "",
		"copyright"             : "Papyrus copyright Â©2014 Terry Weiss. All rights reserved.",
		"navType"               : "vertical",
		"theme"                 : "cerulean",
		"linenums"              : true,
		"collapseSymbols"       : false,
		"inverseNav"            : true,
		"highlightTutorialCode" : true
	},
	"opts"      : {
		"private"     : true,
		"lenient"     : true,
		"destination" : "dox",
		"template"    : "node_modules/ink-docstrap/template"
	}
}
